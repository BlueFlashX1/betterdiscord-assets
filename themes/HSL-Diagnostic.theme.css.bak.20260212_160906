  left: var(--SL-userpanel-left) !important;
  bottom: var(--SL-userpanel-bottom) !important;
  width: var(--SL-userpanel-width) !important;
  height: var(--SL-userpanel-height) !important;
  margin: 0 !important;
  transform: none !important;
  z-index: 1106 !important;
}

section[aria-label='User status and settings'] > div[class^='container_'],
section[aria-label='User status and settings'] > div[class^='containerQuestBarVisible_'],
section[class^='panels_'] > div[class^='container_'],
section[class^='panels_'] > div[class^='containerQuestBarVisible_'],
