/* Global default font: inherit FriendorFoeBB everywhere */
html,
body,
#app-mount {
  font-family: var(--main-font) !important;
}

/* ============================================================================

   SECTION 3: THEME SHADING VARIABLES
   ============================================================================
   Targets: Light, Dark, Ash, and Onyx theme mode variables
   Purpose: Control background opacity and shading for different Discord theme modes
   ============================================================================ */

/* LIGHT THEME - Light mode settings */
:is(.theme-light, .theme-dark .theme-light) {
  --background-shading: rgba(10, 10, 15, 0.05) !important; /* 5% overlay - Subtle tint */
  --card-shading: rgba(10, 10, 15, 0.2); /* Card background shading */
  --popout-shading: rgba(10, 10, 15, 0.7); /* Popup background shading */
  --modal-shading: rgba(10, 10, 15, 0.5); /* Modal background shading */
  --input-shading: rgba(138, 43, 226, 0.1); /* Input field shading */
  --normal-text: #e0d0ff; /* Normal text color */
  --muted-text: #b894e6; /* Muted text color */
}

/* ASH THEME - Medium dark mode */
:is(.theme-dark, .theme-light .theme-dark) {
  --background-shading: rgba(10, 10, 15, 0.05) !important; /* 5% overlay - Subtle tint */
  --card-shading: rgba(10, 10, 15, 0.4);
  --popout-shading: rgba(10, 10, 15, 0.8);
  --modal-shading: rgba(10, 10, 15, 0.6);
  --input-shading: rgba(138, 43, 226, 0.15);
  --normal-text: #e0d0ff;
  --muted-text: #b894e6;
}

/* DARK THEME - Dark mode */
:is(.theme-darker, .theme-light .theme-darker) {
  --background-shading: rgba(10, 10, 15, 0.05) !important; /* 5% overlay - Subtle tint */
  --card-shading: rgba(10, 10, 15, 0.5);
  --popout-shading: rgba(10, 10, 15, 0.9);
  --modal-shading: rgba(10, 10, 15, 0.7);
  --input-shading: rgba(138, 43, 226, 0.2);
  --normal-text: #e0d0ff;
  --muted-text: #b894e6;
}

/* ONYX THEME - Darkest mode */
:is(.theme-midnight, .theme-light .theme-midnight) {
  --background-shading: rgba(5, 5, 10, 0.05) !important; /* 5% overlay - Subtle tint */
  --card-shading: rgba(5, 5, 10, 0.6);
  --popout-shading: rgba(5, 5, 10, 0.95);
  --modal-shading: rgba(5, 5, 10, 0.8);
  --input-shading: rgba(138, 43, 226, 0.25);
  --normal-text: #e0d0ff;
  --muted-text: #b894e6;
}

/* ============================================================================

   SECTION 4: BACKGROUND & ANIMATIONS
   ============================================================================
   Targets: body element, body::before (animated GIF), body::after (dark overlay)
   Purpose: Animated Solo Leveling background GIF with dark overlay for text readability
   Customization: Edit --animated-background-url in :root section (line ~98) to change GIF
   ============================================================================ */

/* Main body background - Make transparent to show animated background */
/* This makes the body element transparent so the animated GIF background can show through */
/* The !important flag ensures this overrides any other background styles */
body {
  background: transparent !important; /* Transparent background to show animated GIF */
  background-attachment: fixed !important; /* Keeps background fixed when scrolling */
  position: relative !important; /* Allows pseudo-elements (::before, ::after) to position relative to body */
}

/* Animated GIF Background - Solo Leveling Shadow Army */
/* This creates the animated background using a hosted GIF */
/* The ::before pseudo-element creates a layer behind all content */
/*
 * TO CUSTOMIZE THE BACKGROUND:
 * Edit the --animated-background-url variable in :root section (around line 92)
 * DO NOT edit the url() here - use the CSS variable for easy customization!
 */
body::before {
  content: ''; /* Required for pseudo-element to render */
  position: fixed; /* Fixed position so it stays in place when scrolling */
  top: 0; /* Start from top of viewport */
  left: 0; /* Start from left of viewport */
  width: 100%; /* Full width of viewport */
  height: 100%; /* Full height of viewport */
  background:
    /* Uses CSS variable for easy customization - Change in :root section! */
    /* See --animated-background-url (around line 92) to customize */ var(
      --animated-background-url
    )
    center 0% / cover no-repeat;
  /* center 0% = position image at very top to maximize visibility of Sung Jinwoo and all three figures */
  /* cover = fill entire area while maintaining aspect ratio for seamless look */
  /* no-repeat = don't tile the image */
  background-attachment: fixed; /* Keep background fixed when scrolling */
  opacity: 1 !important; /* Maximum brightness - adjust 0.0-1.0 for darker/lighter */
  filter: brightness(1.4) saturate(1.2); /* 40% BRIGHTER + 20% more saturation! (Fine-tuned) */
  pointer-events: none; /* Allow clicks to pass through to elements behind */
  z-index: -2; /* Behind everything (negative z-index puts it behind content) */
  animation: soloLevelingFade 10s ease-in-out infinite;
  /* Animation: name duration timing-function iteration-count */
  /* Currently set to fade animation (though it's static in the keyframes) */
}

/* Dark Overlay - Improves text readability over animated background */
/* The ::after pseudo-element creates a dark overlay on top of the animated background */
/* This makes text more readable by darkening the background slightly */
/* Adjust opacity (0.5) to make background more/less visible */
body::after {
  content: ''; /* Required for pseudo-element to render */
  position: fixed; /* Fixed position so it stays in place when scrolling */
  top: 0; /* Start from top of viewport */
  left: 0; /* Start from left of viewport */
  width: 100%; /* Full width of viewport */
  height: 100%; /* Full height of viewport */
  background: rgba(10, 10, 15, 0.5) !important;
  /* rgba(red, green, blue, opacity) */
  /* 10, 10, 15 = very dark blue-gray color */
  /* 0.5 = 50% opacity (0.0 = transparent, 1.0 = fully opaque) */
  /* Increase opacity (e.g., 0.7) for darker overlay, decrease (e.g., 0.3) for lighter */
  pointer-events: none; /* Allow clicks to pass through to elements behind */
  z-index: -1; /* Between background (-2) and content (0+) */
}

/* Override ClearVision background overlays */
/* Prevents ClearVision from adding its own background overlays */
[id='app-mount'] > div[class*='-app']::before,
[id='app-mount'] > div[class*='-app']::after,
div[class*='-app']::before,
div[class*='-app']::after,
div[class*='app-']::before,
div[class*='app-']::after,
[class*='base']::before,
[class*='base']::after {
  background: transparent !important;
  opacity: 0 !important;
}

/* Override ClearVision background-shading on main app container */
[id='app-mount'] > div[class*='-app'],
div[class*='-app'],
div[class*='app-'] {
  background: transparent !important;
}

/* ============================================================================

   SECTION 5: TYPOGRAPHY
   ============================================================================
   Targets: All text elements (*, body, div, span, p, h1-h6, buttons, inputs, etc.)
   Purpose: Apply Orbitron font globally, style headings, messages, usernames, channels
   Exclusions: Critical hit messages (.bd-crit-hit) - handled by CriticalHit plugin
   ============================================================================ */

/* Global Font Override - Apply Orbitron everywhere */
/* Using both universal and specific selectors for maximum coverage */
/* Ensures Orbitron font is applied consistently throughout Discord */
* {
  font-family: 'Orbitron', sans-serif !important;
  /* !important ensures override of Discord's default fonts */
}

/* Additional specific targeting for Discord containers */
/* Reinforces font application on main Discord elements */
.a3002d7de5be5280-app,
._160d8e55254637e5-app,
.theme-dark,
.theme-light,
body,
div[class*='app-'],
div[class*='base-'],
div[class*='sidebar'],
div[class*='chat'],
div[class*='content'],
div[class*='container'],
div[class*='message'],
span,
p,
h1,
h2,
h3,
h4,
h5,
h6,
button,
input,
textarea {
  font-family: 'Orbitron', sans-serif !important;
  /* Direct font name with !important for maximum override strength */
}

/* Critical Hit Messages - Exclude from theme font */
/* Let CriticalHit plugin handle its own font styling */
.bd-crit-hit,
.bd-crit-hit *,
.bd-crit-hit *::before,
.bd-crit-hit *::after,
[class*='message'].bd-crit-hit,
[class*='message'].bd-crit-hit *,
[class*='message'] .bd-crit-hit,
[class*='message'] .bd-crit-hit *,
[class*='message'] [class*='content'].bd-crit-hit,
[class*='message'] [class*='text'].bd-crit-hit,
[class*='messageContent'].bd-crit-hit,
[class*='messageContent'].bd-crit-hit * {
  font-family: unset !important; /* Remove theme font */
  font-weight: unset !important;
  font-style: unset !important;
  font-variant: unset !important;
  font-stretch: unset !important;
  font-size: unset !important;
  line-height: unset !important;
  letter-spacing: unset !important;
  text-transform: unset !important;
}

/* Headings - Channel/server names, titles */
/* Applies to h1-h6 and any element with 'title' or 'header' in class */
h1,
h2,
h3,
h4,
h5,
h6,
[class*='title'],
[class*='header'] [class*='title'],
[class*='name'][class*='header'] {
  font-family: var(--heading-font) !important;
  font-weight: 500 !important; /* Medium weight */
  letter-spacing: 0.5px !important;
  text-shadow: var(--text-shadow-light) !important;
}

/* Message Text - Chat message content */
/* Excludes critical hit messages */
