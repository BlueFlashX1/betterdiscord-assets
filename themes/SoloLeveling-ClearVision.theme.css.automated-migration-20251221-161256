/* YouTube/video embeds: consistent 16:9 media sizing */
/* Credit: seannmatts (snippet provided by user; adapted + flattened for non-nested CSS) */
[class*='-embedFull']:has(iframe),
[class*='-embedFull']:has(img[src*='i.ytimg.com']) {
  max-width: 750px !important;
}

[class*='-embedFull']:has(iframe) [class*='-gridContainer'],
[class*='-embedFull']:has(img[src*='i.ytimg.com']) [class*='-gridContainer'] {
  max-width: 750px !important;
}

[class*='-embedFull']:has(iframe) [class*='embedMedia'],
[class*='-embedFull']:has(iframe) [class*='-image'],
[class*='-embedFull']:has(img[src*='i.ytimg.com']) [class*='embedMedia'],
[class*='-embedFull']:has(img[src*='i.ytimg.com']) [class*='-image'] {
  max-width: 750px !important;
  max-height: unset !important;
}

[class*='-embedFull']:has(iframe) [class*='embedMedia'] [class*='-imageContainer'],
[class*='-embedFull']:has(iframe) [class*='-image'] [class*='-imageContainer'],
[class*='-embedFull']:has(img[src*='i.ytimg.com']) [class*='embedMedia'] [class*='-imageContainer'],
[class*='-embedFull']:has(img[src*='i.ytimg.com']) [class*='-image'] [class*='-imageContainer'] {
  max-width: 750px !important;
  aspect-ratio: 16/9 !important;
  border-radius: 20px !important;
  overflow: hidden !important;
}

[class*='-embedFull']:has(iframe) [class*='embedMedia'] [class*='-imageContainer'] img,
[class*='-embedFull']:has(iframe) [class*='-image'] [class*='-imageContainer'] img,
[class*='-embedFull']:has(img[src*='i.ytimg.com'])
  [class*='embedMedia']
  [class*='-imageContainer']
  img,
[class*='-embedFull']:has(img[src*='i.ytimg.com'])
  [class*='-image']
  [class*='-imageContainer']
  img {
  max-width: 750px !important;
  max-height: unset !important;
  aspect-ratio: 16/9 !important;
  border-radius: 20px !important;
}

[class*='-embedFull']:has(iframe) [class*='embedMedia'] > [class*='-embedVideo'],
[class*='-embedFull']:has(iframe) [class*='-image'] > [class*='-embedVideo'],
